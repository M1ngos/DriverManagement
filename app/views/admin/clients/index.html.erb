<h1>Clients</h1>
<%= link_to 'New Client', new_admin_client_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Contact Info</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.name %></td>
        <td><%= client.contact_info %></td>
        <td><%= client.address %></td>
        <!-- <td><%= link_to 'Show', admin_client_path(client) %></td>-->
        <td><%= link_to 'Edit', edit_admin_client_path(client) %></td>
        <td><%= link_to 'Destroy', admin_client_path(client), data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
          } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
