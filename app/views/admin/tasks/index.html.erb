<h1>Tasks</h1>
<%= link_to 'New Task', new_admin_task_path %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Driver</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.driver.email if task.driver %></td>
        <td><%= task.client.present? ? task.client.name : 'No Client' %></td>
        <td><%= link_to 'Show', admin_task_path(task) %></td>
        <td><%= link_to 'Edit', edit_admin_task_path(task) %></td>
        <td><%= link_to "Destroy", admin_task_path(task), data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
          } %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
